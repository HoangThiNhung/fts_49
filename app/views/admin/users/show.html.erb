<div class="col-lg-3">
  <%= render "layouts/side_bar" %>
</div>
<div class="col-lg-9">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1><%= @user.name %></h1>
      <table class="table">
        <tr>
          <td><%= t "admin.users.email" %></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td><%= t "admin.users.role" %></td>
          <td>
            <% if @user.admin? %>
              <div class="btn btn-primary">
                <%= t "admin.users.admin" %>
              </div>
            <% else %>
              <div class="btn btn-success">
                <%= t "admin.users.user" %>
              </div>
            <% end %> 
          </td>
        </tr>
        <tr>
          <td><%= t "admin.users.join_date" %></td>
          <td><%= @user.created_at.strftime("%h %e, %Y") %></td>
        </tr>
      </table>
    </div>
  </div>
</div>