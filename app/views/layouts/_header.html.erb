<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("application.general.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("application.general.home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.admin %>
            <li>
              <%= link_to t("dashboard"), admin_root_path %>
            </li>
            <li>
              <%= link_to t("admin.logs.see_log"), admin_devise_admin_logs_path %>
            </li>
          <% end %>
          <li><%= link_to t("question.question_attribute"), questions_path %></li>
          <li>
            <%= link_to t("exams.exam"), exams_path %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
              <li>
                <%= link_to t("users.change"), edit_user_registration_path %>
              </li>
              <li><%= link_to t("users.profile"), current_user %></li>
              <li>
                <%= link_to t("users.log_out"), destroy_user_session_path %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
