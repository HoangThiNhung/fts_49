<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("application.general.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("application.general.home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.admin %>
            <li>
              <%= link_to t("subjects.new_subject"), new_admin_subject_path %>
            </li>
          <% end %>
          <li><%= link_to t("question.question_attribute"), questions_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("users.change"), edit_user_registration_path %>
              </li>
              <li><%= link_to t("users.profile"), current_user %></li>
              <li>
                <%= link_to t("users.log_out"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
