<% provide :title, t("application.general.home") %>
<% unless user_signed_in? %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>
    <%= link_to t(".sign_up"), new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% else %>
  <%= render "shared/activity" %>
<% end %>
